{
  "name": "git-repo-window-colors",
  "displayName": "Git Repo Window Colors",
  "description": "Customize the color of each window's activityBar and titleBar based on the git repository name.",
  "icon": "img/icon_602.png",
  "version": "1.0.2",
  "publisher": "KevinMills",
  "author": {
    "name": "Kevin Mills"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mgfarmer/unique-window-colors.git"
  },
  "categories": [
    "Other",
    "Themes"
  ],
  "keywords": [
    "color",
    "theme",
    "workspace",
    "folder",
    "customization"
  ],
  "activationEvents": [
    "workspaceContains:**/*"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Git Repo Window Colors Configuration",
      "properties": {
        "windowColors.configuration": {
          "type": "string",
          "default": "[ { \"name\": \"repo-name\", \"color\" : \"red\" } ]",
          "editPresentation": "multilineText",
          "markdownDescription": "A json array of objects `{ 'name' : <repo-name>, 'color' : <color-specifier> }`.  Repository names are simple string search for the name in the repository URL as given by `git config --get remote.origin.url`. Colors can be specified in any form recognized by the Javascript Color class.  See: [Colors Tutorial](https://www.w3schools.com/colors/default.asp)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.x",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@types/color": "^3.0.0",
    "color": "^3.1.0",
    "fs-extra": "^11.2.0"
  }
}
